-- create table of NY restaurants
CREATE TABLE nomnom (
    name TEXT, 
    neighborhood TEXT, 
    cuisine TEXT, 
    review INTEGER, 
    price TEXT, 
    health TEXT
);

-- What are the column names?
SELECT *
FROM nomnom;

-- What are the distinct neighborhoods?
SELECT DISTINCT neighborhood
FROM nomnom;

-- What are the distinct cuisine types?
SELECT DISTINCT cuisine
FROM nomnom;

-- We would like some Chinese takeout.
SELECT *
FROM nomnom
WHERE cuisine = 'Chinese';

-- Returns all the restaurants with reviews of 4 and above.
SELECT *
FROM nomnom
WHERE review >= 4;

-- Return all the restaurants that are Italian and $$$.
SELECT *
FROM nomnom
WHERE cuisine = 'Italian' AND price = '$$$';

/* Your coworker Trey can’t remember the exact name of a restaurant 
he went to but he knows it contains the word ‘meatball’ in it.
Can you find it for him using a query? */
SELECT *
FROM nomnom
WHERE name LIKE '%meatball%';

/* Let’s order delivery to the house!
Finds all the close by spots in Midtown, Downtown or Chinatown. */
SELECT *
FROM nomnom
WHERE neighborhood = 'Midtown'
  OR neighborhood = 'Downtown'
  OR neighborhood = 'Chinatown';


  
